{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 3000,
  "legacyExplorer": true,
  "authorization": {
    "enabled": true,
    "options": {
      "models": {
        "User": "user",
        "AccessToken": "accessToken"
      }
    }
  },
  "remoting": {
    "context": false,
    "rest": {
      "normalizeHttpPath": false,
      "xml": false,
      "handleErrors": true
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false
  }
}
